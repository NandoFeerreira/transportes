@model List<TransportesViewModel>

@if (ViewBag.Mensagem != "")
{
    <div class="alert alert-success">
        @ViewBag.Mensagem
    </div>
}
 
<div class="text-center">
    <h3>Editar Conteiner</h3>
</div>
<body>
    <form class="mx-auto" method="POST" action="/clientes/editar">
        <div class="form-row">
            <div class="form-group col-md-8 mx-auto">
                <label for="cliente-nome">Cliente:</label>
                <select class="form-control" id="cliente-nome" name="ClienteNome">
                    <option value="">Selecione o Cliente</option>
                    @foreach (var cliente in Model)
                    {
                        <option value="@cliente.ClienteNome">@cliente.ClienteNome</option>
                    }
                </select>
            </div>
            <div class="form-group col-md-8 mx-auto">
                <label for="nome-cliente">Editar Cliente:</label>
                <div class="input-group">
                    <input type="text" class="form-control" id="nome-cliente" name="NomeClienteAtualiado">
                    <input type="text" class="form-control" id="id-cliente" name="ClienteId" hidden >
                </div>
            </div>
            <div class="form-group col-md-8 mx-auto">
                <label for="conteiner-numero">Nº do Container:</label>
                <div class="input-group">
                    <input type="text" class="form-control" id="conteiner-numero" name="NumeroConteiner" >
                    <input type="text" class="form-control" id="id-conteiner" name="ConteinerId" hidden >
                </div>
            </div>
            <div class="form-group col-md-8 mx-auto">
                <label for="tipo">Tipo:</label>
                <select class="form-control" id="tipo" name="Tipo">
                    <option value="">Selecione</option>
                    <option value="20">20</option>
                    <option value="40">40</option>
                </select>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-8 mx-auto">
                <label for="status">Status:</label>
                <select class="form-control" id="status" name="Status">
                    <option value="">Selecione</option>
                    <option value="Cheio">Cheio</option>
                    <option value="Vazio">Vazio</option>
                </select>
            </div>
            <div class="form-group col-md-8 mx-auto">
                <label for="categoria">Categoria:</label>
                <select class="form-control" id="categoria" name="Categoria">
                    <option value="">Selecione</option>
                    <option value="Importação">Importação</option>
                    <option value="Exportação">Exportação</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="text-center">
                <button type="submit" class="btn btn-success mt-2">Editar Contêiner</button>
                <button type="submit" class="btn btn-danger mt-2" formaction="/clientes/excluir" >Excluir Contêiner</button>
            </div>
        </div>
    </form>
    <script>
        var model = @Html.Raw(Json.Serialize(Model));
    </script>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/editar-conteiner.js" ></script>
</body>
